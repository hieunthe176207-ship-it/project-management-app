<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="12dp"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- Tìm kiếm -->
    <EditText
        android:id="@+id/etSearch"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:hint="Tìm theo tên hoặc email"
        android:background="@android:drawable/edit_text"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:inputType="text"
        android:singleLine="true"
        android:textColorHint="#9E9E9E"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Dải 'Đã chọn' (ẩn khi chưa có ai) -->
    <LinearLayout
        android:id="@+id/rowPicked"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:visibility="gone"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/etSearch"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Tiêu đề: Đã chọn -->
        <TextView
            android:id="@+id/tvPickedTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đã chọn"
            android:textStyle="bold"
            android:paddingBottom="6dp"/>

        <!-- List user đã chọn (VERTICAL) -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvPicked"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never"
            android:nestedScrollingEnabled="false"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"/>
    </LinearLayout>

    <!-- Tiêu đề: Danh sách người dùng -->
    <TextView
        android:id="@+id/tvUsersTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Danh sách người dùng"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/rowPicked"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_goneMarginTop="10dp"/>

    <!-- Danh sách người dùng (đổ phần còn lại) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvUsers"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:minHeight="220dp"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/tvUsersTitle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
