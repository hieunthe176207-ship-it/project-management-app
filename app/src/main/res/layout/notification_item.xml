<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="72dp"
        android:padding="12dp">

        <!-- Avatar người gửi / icon loại -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgSender"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/default_avatar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <!-- Chấm unread -->
        <View
            android:id="@+id/dotUnread"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@id/imgSender"
            app:layout_constraintTop_toTopOf="@id/imgSender" />

        <!-- Tiêu đề -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Bạn được giao công việc mới"
            android:textStyle="bold"
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@id/imgSender"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tvTime"
            android:layout_marginStart="12dp"/>

        <!-- Thời gian -->
        <TextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5m"
            android:textSize="12sp"
            android:textColor="@color/md_onSurfaceVariant"
            app:layout_constraintTop_toTopOf="@id/tvTitle"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Nội dung -->
        <TextView
            android:id="@+id/tvContent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Thiết kế màn Kaban cho sprint 5"
            android:textSize="13sp"
            android:textColor="@color/md_onSurfaceVariant"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="@id/tvTitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"/>

        <!-- Chip loại -->
        <com.google.android.material.chip.Chip
            android:id="@+id/chipType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TASK"
            app:chipCornerRadius="14dp"
            app:chipMinHeight="28dp"
            app:ensureMinTouchTargetSize="false"
            app:chipBackgroundColor="@color/chip_deadline_bg"
            app:layout_constraintStart_toStartOf="@id/tvTitle"
            app:layout_constraintTop_toBottomOf="@id/tvContent"
            android:layout_marginTop="8dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
