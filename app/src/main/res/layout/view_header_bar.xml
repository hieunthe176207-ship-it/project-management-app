<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/headerBar"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:background="@android:color/transparent">

    <!-- NhÃ³m tiÃªu Ä‘á» bÃªn trÃ¡i -->
    <LinearLayout
        android:id="@+id/leftTexts"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/actionsGroup"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="12dp">

        <TextView
            android:id="@+id/tvGreeting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hi, Fahmi ðŸ‘‹"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#111111"/>

        <TextView
            android:id="@+id/tvSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome back TaPro"
            android:textSize="13sp"
            android:textColor="#6F6F6F"/>
    </LinearLayout>

    <!-- NhÃ³m nÃºt trÃ²n bÃªn pháº£i -->
    <LinearLayout
        android:id="@+id/actionsGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Search -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/btnSearch"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="10dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="2dp"
            app:strokeWidth="0dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:src="@drawable/ic_search"
                />
        </com.google.android.material.card.MaterialCardView>

        <!-- Calendar -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/btnCalendar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="10dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="2dp"
            app:strokeWidth="0dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:src="@drawable/ic_calendar"
                />
        </com.google.android.material.card.MaterialCardView>

        <!-- Messages -->
        <FrameLayout
            android:id="@+id/btnMessageContainer"
            android:layout_width="40dp"
            android:layout_height="40dp">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btnMessage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="20dp"
                app:cardElevation="2dp"
                app:strokeWidth="0dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:src="@drawable/ic_chat"/>
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/badgeMessage"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="end|top"
                android:layout_marginEnd="0dp"
                android:layout_marginTop="0dp"
                android:gravity="center"
                android:text="3"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="@drawable/bg_badge_red"
                android:elevation="8dp"
                android:visibility="visible"/>
        </FrameLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
