<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="0dp">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            app:titleEnabled="false"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/headerCard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="28dp"
                app:cardUseCompatPadding="false"
                app:cardElevation="0dp"
                android:layout_marginTop="-25dp"
                app:layout_collapseMode="parallax">

                <!-- ẢNH NỀN -->
                <ImageView
                    android:id="@+id/imgHeader"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/bg"/>
                <!-- NHÓM AVATAR: neo góc phải-dưới -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="bottom|end"
                    android:layout_margin="25dp"
                    android:clipToPadding="false"
                    android:clipChildren="false">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/memberAvatar1"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:src="@drawable/avatar"/>

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/memberAvatar2"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_marginStart="-10dp"
                        android:src="@drawable/avatar"/>

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/memberAvatar3"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_marginStart="-10dp"
                        android:src="@drawable/avatar"/>

                    <!-- Avatar cuối: là ảnh nhưng có overlay + chữ +5 -->
                    <FrameLayout
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_marginStart="-10dp">

                        <!-- Ảnh tròn thật -->
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/memberAvatar4"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/avatar"/>

                        <!-- Lớp mờ hình tròn -->
                        <View
                            android:id="@+id/overlayCount"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/oval_mask"/>

                        <!-- Chữ +5 ở giữa -->
                        <TextView
                            android:id="@+id/membersCount"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="+5"
                            android:gravity="center"
                            android:textColor="@android:color/white"
                            android:textStyle="bold"
                            android:textSize="16sp"/>
                    </FrameLayout>
                </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
            <!-- THANH TIÊU ĐỀ ĐÈ LÊN ẢNH -->
            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbarProject"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:paddingHorizontal="8dp"
                android:background="@android:color/transparent"
                app:title="Project Details"
                app:titleCentered="true"
                app:titleTextColor="@android:color/white"
                app:navigationIcon="@drawable/ic_arrow_back_white"
                app:menu="@menu/project_menu"/>

        </com.google.android.material.appbar.CollapsingToolbarLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/titleProject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="10dp"
                >

                <!-- Title -->
                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Design Mobile App"
                    android:textSize="25sp"
                    android:textStyle="bold"/>

                <!-- Description ngay dưới -->
                <TextView
                    android:id="@+id/tvDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Mô tả dự án ở đây. Bạn có thể để đoạn dài nhiều dòng, NestedScrollView sẽ tự cuộn."
                    android:textSize="14sp"
                    android:textColor="@color/md_onSurfaceVariant"
                    android:lineSpacingExtra="2dp"/>
            </LinearLayout>

            <com.google.android.material.chip.Chip
                app:layout_constraintStart_toStartOf="@id/titleProject"
                app:layout_constraintTop_toBottomOf="@id/titleProject"
                android:layout_marginTop="10dp"
                android:id="@+id/chipProgress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="65/100"
                android:textColor="@color/white"
                app:chipBackgroundColor="@color/md_primary"
                app:chipCornerRadius="20dp"
                app:chipMinHeight="28dp"
                app:closeIconEnabled="false"
                app:ensureMinTouchTargetSize="false"
                app:textEndPadding="12dp"
                app:textStartPadding="12dp"
                tools:layout_editor_absoluteX="318dp"
                tools:layout_editor_absoluteY="96dp" />


            <com.google.android.material.chip.Chip
                android:id="@+id/chipDeadline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deadline 12 Okt 2023"
                android:textColor="#FF3B30"
                app:chipCornerRadius="20dp"
                app:chipBackgroundColor="@color/chip_deadline_bg"
                app:chipMinHeight="28dp"
                app:ensureMinTouchTargetSize="false"
                app:closeIconEnabled="false"
                app:textStartPadding="12dp"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toEndOf="@id/titleProject"
                app:layout_constraintTop_toBottomOf="@id/titleProject"
                app:textEndPadding="12dp" />


            <LinearLayout
                android:id="@+id/creatorRow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="14dp"
                app:layout_constraintStart_toStartOf="@id/titleProject"
                app:layout_constraintEnd_toEndOf="@id/titleProject"
                app:layout_constraintTop_toBottomOf="@id/chipProgress">

                <!-- Avatar -->
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imgCreatorAvatar"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/avatar"
                    />

                <!-- Tên + Email -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:id="@+id/tvCreatorName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nguyễn Văn A"
                        android:textStyle="bold"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tvCreatorEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="a.nguyen@example.com"
                        android:textSize="13sp"
                        android:textColor="@color/md_onSurfaceVariant" />
                </LinearLayout>

                <!-- Nhãn vai trò (tuỳ chọn) -->
                <com.google.android.material.chip.Chip
                    android:id="@+id/chipOwner"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:text="Owner"
                    app:ensureMinTouchTargetSize="false"
                    app:chipCornerRadius="16dp"
                    app:chipBackgroundColor="@color/chip_deadline_bg"
                    android:textColor="@color/md_primary" />
            </LinearLayout>

            <com.google.android.material.divider.MaterialDivider
                android:id="@+id/dividerAfterCreator"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="@id/titleProject"
                app:layout_constraintEnd_toEndOf="@id/titleProject"
                app:layout_constraintTop_toBottomOf="@id/creatorRow" />
        </androidx.constraintlayout.widget.ConstraintLayout>







        <LinearLayout
            android:id="@+id/actionsRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <!-- Báo cáo -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardBaoCao"
                android:layout_width="0dp"
                android:layout_height="88dp"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                app:cardBackgroundColor="@color/white"
                android:foreground="@color/white"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"

                    android:gravity="center">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_report"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="Báo cáo"
                        android:textStyle="bold"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Công việc -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardCongViec"
                android:layout_width="0dp"
                android:layout_height="88dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="@color/white"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_tasks"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="Công việc"
                        android:textStyle="bold"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Thành viên -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardThanhVien"
                android:layout_width="0dp"
                android:layout_height="88dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="@color/white"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_members"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="Thành viên"
                        android:textStyle="bold"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <FrameLayout
        android:id="@+id/loadingOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/progress"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </FrameLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>
