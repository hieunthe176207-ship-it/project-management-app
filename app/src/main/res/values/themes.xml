<resources>
    <style name="Theme.Stylish" parent="Theme.MaterialComponents">

        <!-- Colors -->
        <item name="colorPrimary">@color/md_primary</item>
        <item name="colorOnPrimary">@color/md_onPrimary</item>
        <item name="colorSecondary">@color/md_secondary</item>
        <item name="colorOnSecondary">@color/md_onSecondary</item>
        <item name="android:textColor">#000000</item>
        <item name="android:colorBackground">@color/md_background</item>
        <item name="colorSurface">@color/md_surface</item>
        <item name="colorOnSurface">@color/md_onSurface</item>
        <item name="colorError">@color/md_error</item>
        <item name="colorOutline">@color/md_outline</item>

    </style>

    <style name="Theme.YourApp" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:textColor">#000000</item>
        <item name="bottomSheetDialogTheme">@style/SheetTheme.Rounded</item>
    </style>



    <style name="SheetTheme.Rounded" parent="ThemeOverlay.Material3.BottomSheetDialog">
        <item name="android:textColor">#000000</item>
        <item name="bottomSheetStyle">@style/Widget.Sheet.Rounded</item>
    </style>

    <style name="Widget.Sheet.Rounded" parent="Widget.Material3.BottomSheet.Modal">
        <item name="android:textColor">#000000</item>
        <!-- Bo góc trên giống ảnh -->
        <item name="shapeAppearance">@style/Shape.Sheet</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="Shape.Sheet" parent="">
        <item name="android:textColor">#000000</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">28dp</item>
        <item name="cornerSizeTopRight">28dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <style name="MyDatePickerTheme" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="colorSurface">#FFFFFF</item>
        <item name="colorOnSurface">#000000</item>
        <item name="colorPrimary">@color/md_primary</item>
    </style>







</resources>
